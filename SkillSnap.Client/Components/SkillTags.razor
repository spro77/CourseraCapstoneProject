@* SkillTags Component - Displays skills in a tag-style list *@
@using SkillSnap.Client.Models
@using SkillSnap.Client.Services
@inject SkillService SkillService

<div class="skill-tags">
    <h3>Skills</h3>

    @if (isLoading)
    {
        <p><em>Loading skills...</em></p>
    }
    else if (!skills.Any())
    {
        <p><em>No skills found. Add some data using the /api/seed endpoint!</em></p>
    }
    else
    {
        <div class="tags-container">
            @foreach (var skill in skills)
            {
                <div class="skill-tag @GetLevelClass(skill.Level)">
                    <span class="skill-name">@skill.Name</span>
                    <span class="skill-level">@skill.Level</span>
                </div>
            }
        </div>
    }

    <div class="add-skill-form">
        <h4>Add New Skill</h4>
        <input type="text" @bind="newSkill.Name" placeholder="Skill Name" class="form-input" />
        <select @bind="newSkill.Level" class="form-input">
            <option value="">Select Level</option>
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
        </select>
        <input type="number" @bind="newSkill.PortfolioUserId" placeholder="User ID (default: 1)" class="form-input" />
        <button @onclick="AddSkill" class="btn-add">Add Skill</button>
    </div>
</div>

@code {
    private List<Skill> skills = new List<Skill>();
    private Skill newSkill = new Skill { PortfolioUserId = 1 };
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadSkills();
    }

    private async Task LoadSkills()
    {
        isLoading = true;
        skills = await SkillService.GetSkillsAsync();
        isLoading = false;
    }

    private async Task AddSkill()
    {
        if (string.IsNullOrWhiteSpace(newSkill.Name) || string.IsNullOrWhiteSpace(newSkill.Level))
        {
            return;
        }

        var addedSkill = await SkillService.AddSkillAsync(newSkill);
        if (addedSkill != null)
        {
            await LoadSkills();
            newSkill = new Skill { PortfolioUserId = 1 };
        }
    }

    private string GetLevelClass(string level)
    {
        return level.ToLower() switch
        {
            "advanced" => "level-advanced",
            "intermediate" => "level-intermediate",
            "beginner" => "level-beginner",
            _ => ""
        };
    }
}

<style>
    .skill-tags {
        padding: 1rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .skill-tags h3 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .skill-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: transform 0.2s;
    }

    .skill-tag:hover {
        transform: translateY(-2px);
    }

    .skill-name {
        font-weight: 600;
    }

    .skill-level {
        font-size: 0.8rem;
        opacity: 0.8;
    }

    .level-advanced {
        background-color: #4caf50;
        color: white;
    }

    .level-intermediate {
        background-color: #2196f3;
        color: white;
    }

    .level-beginner {
        background-color: #ff9800;
        color: white;
    }

    .add-skill-form {
        margin-top: 2rem;
        padding: 1.5rem;
        border: 2px dashed #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        max-width: 400px;
    }

    .add-skill-form h4 {
        margin-top: 0;
        margin-bottom: 1rem;
        color: #333;
    }

    .form-input {
        display: block;
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
    }

    .btn-add {
        padding: 0.75rem 1.5rem;
        background-color: #2196f3;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-add:hover {
        background-color: #0b7dda;
    }
</style>
